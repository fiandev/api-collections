{
"buildCommand":"pip install -r requirements.txt && flask run",
  "builds": [
    {
      "src": "./app.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "./app.py"
    }
  ],
  { "rewrites": [ { "source": "/(.*)", "destination": "/app" } ] }
}
