{
  "buildCommand": "npm install && npm run build && pip install -r requirements.txt && flask run",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    }
  ]
}