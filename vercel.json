{
  "buildCommand": "npm install && npm run build && pip install -r requirements.txt && flask run",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "app.py"
    }
  ]
}